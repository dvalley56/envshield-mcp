{
    "name": "envshield-mcp",
    "version": "0.3.0",
    "description": "MCP server that lets AI agents use secrets without seeing them",
    "type": "module",
    "main": "dist/index.js",
    "bin": {
        "envshield-mcp": "./dist/cli.js"
    },
    "scripts": {
        "build": "tsc",
        "dev": "tsc --watch",
        "test": "vitest run",
        "test:watch": "vitest",
        "lint": "tsc --noEmit"
    },
    "keywords": [
        "mcp",
        "secrets",
        "env",
        "security",
        "ai"
    ],
    "license": "MIT",
    "engines": {
        "node": ">=18"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/yourusername/envshield-mcp"
    },
    "files": [
        "dist",
        "README.md"
    ],
    "publishConfig": {
        "access": "public"
    },
    "dependencies": {
        "@modelcontextprotocol/sdk": "^1.25.1",
        "dotenv": "^17.2.3"
    },
    "devDependencies": {
        "@types/node": "^25.0.3",
        "typescript": "^5.9.3",
        "vitest": "^4.0.16"
    }
}
